{
  "name": "kitchenhand",
  "version": "1.0.0",
  "private": true,
  "description": "Simple application for managing weekly menu and shopping list",
  "main": "index.js",
  "author": "Ilari Tommiska",
  "license": "ISC",
  "workspaces": {
    "packages": [
      "packages/**"
    ],
    "nohoist": [
      "**/react-scripts",
      "**/react-scripts/**"
    ]
  },
  "scripts": {
    "test": "cross-env NODE_ENV=test jest --verbose",
    "start": "cross-env NODE_ENV=production tsc && node ./build/index.js",
    "watch": "cross-env NODE_ENV=development ts-node-dev --respawn --transpileOnly index.ts",
    "tsc": "tsc",
    "generate": "graphql-codegen --config codegen.yml"
  },
  "dependencies": {
    "apollo-server": "^2.5.0",
    "apollo-server-express": "^2.6.3",
    "bcrypt": "^3.0.6",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "graphql": "^14.3.1",
    "graphql-tools": "^4.0.5",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.5.11",
    "mongoose-unique-validator": "^2.0.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.3.1",
    "@graphql-codegen/introspection": "1.3.1",
    "@graphql-codegen/typescript": "1.3.1",
    "@graphql-codegen/typescript-mongodb": "1.3.1",
    "@graphql-codegen/typescript-resolvers": "1.3.1",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.0",
    "@types/graphql": "^14.2.2",
    "@types/jest": "^24.0.15",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mongodb-memory-server": "^1.8.0",
    "@types/mongoose": "^5.5.6",
    "@types/mongoose-unique-validator": "^1.0.1",
    "cross-env": "^5.2.0",
    "jest": "24.7.1",
    "jest-extended": "^0.11.1",
    "mongodb-memory-server": "^5.1.5",
    "ts-jest": "^24.0.2",
    "ts-node-dev": "^1.0.0-pre.40",
    "typescript": "^3.5.2"
  }
}
