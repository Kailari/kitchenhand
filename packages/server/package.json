{
  "name": "server",
  "version": "1.0.0",
  "private": true,
  "description": "Backend server for the Kitchenhand-App",
  "main": "build/index.js",
  "author": "Ilari Tommiska",
  "license": "ISC",
  "scripts": {
    "generate": "graphql-codegen --config codegen.yml",
    "pretest": "yarn generate",
    "test": "cross-env NODE_ENV=test jest --verbose",
    "start": "cross-env NODE_ENV=production node ./build/index.js",
    "prewatch": "yarn generate",
    "watch": "cross-env NODE_ENV=development ts-node-dev --respawn --transpileOnly ./src/index.ts",
    "prelint": "yarn generate",
    "lint": "eslint . --ext ts,tsx"
  },
  "dependencies": {
    "@graphql-codegen/cli": "^1.8.0",
    "@graphql-codegen/introspection": "^1.8.0",
    "@graphql-codegen/typescript": "^1.8.0",
    "@graphql-codegen/typescript-mongodb": "^1.8.0",
    "@graphql-codegen/typescript-resolvers": "^1.8.0",
    "ts-node": "^8.3.0",
    "apollo-server": "^2.7.2",
    "apollo-server-express": "^2.7.2",
    "bcrypt": "^3.0.6",
    "dotenv": "^8.0.0",
    "graphql": "^14.4.2",
    "graphql-tag": "^2.10.1",
    "graphql-tag-pluck": "^0.8.3",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^5.6.7",
    "mongoose-unique-validator": "^2.0.3",
    "validators": "1.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mongoose": "^5.5.11",
    "@types/mongoose-unique-validator": "^1.0.2",
    "@types/supertest": "^2.0.8",
    "jest": "24.7.1",
    "jest-extended": "^0.11.2",
    "mongodb-memory-server": "^5.1.9",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node-dev": "^1.0.0-pre.40",
    "typescript": "^3.5.3"
  }
}
